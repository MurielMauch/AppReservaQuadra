<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.master.appreservaquadramaterialesportivo.Cadastro">


    <TextView
        android:text="Preencha os campos abaixo para realizar seu cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_above="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:text="Nome Completo"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            android:layout_weight="0.13" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:inputType="textPersonName"
            android:ems="15"
            android:id="@+id/txt_nome"
            android:layout_weight="0.13"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:layout_weight="0.13"
            android:text="IdentificacÃ£o" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:background="#ffffff"
            android:ems="15"
            android:id="@+id/txt_identificao"
            android:layout_weight="0.13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="24sp"
            android:layout_weight="0.13"
            android:text="Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="#ffffff"
            android:ems="15"
            android:id="@+id/txt_email"
            android:layout_weight="0.13"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="24sp"
            android:layout_weight="0.13"
            android:text="Senha" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:ems="15"
            android:id="@+id/txt_senha"
            android:layout_weight="0.13"
            android:text=""
            android:inputType="textPassword"></EditText>

        <TextView
            android:text="Confirma Senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="24sp"
            android:layout_weight="0.13" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="#ffffff"
            android:ems="15"
            android:id="@+id/txt_confsenha"
            android:layout_weight="0.13" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.13">

            <Button
                android:text="VOLTAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="12dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1" />

            <Button
                android:text="CONFIRMAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button18"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
